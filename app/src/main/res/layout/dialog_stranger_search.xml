            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="â™‚ï¸"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#2196F3"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ Male"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find a male stranger to chat"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- âœ… FIXED: Text Checkmark -->
            <TextView
                android:id="@+id/iconMale"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="âœ“"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Option 2: Female -->
        <LinearLayout
            android:id="@+id/optionFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/option_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <!-- âœ… FIXED: Simple emoji -->
            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="â™€ï¸"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#E91E63"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ƒ Female"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find a female stranger to chat"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- âœ… FIXED: Text Checkmark -->
            <TextView
