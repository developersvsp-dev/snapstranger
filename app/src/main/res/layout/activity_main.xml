<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Decorative Elements -->
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_decoration_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:scaleX="0.7"
        android:scaleY="0.7" />

    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_decoration_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="80dp"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo/Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="48dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SnapStrangerr"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:letterSpacing="0.05"
                    android:shadowColor="#22000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Username Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#BBDEFB"
                app:hintTextColor="#2196F3"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                app:startIconTint="#2196F3">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#BBDEFB" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- âœ… USERNAME STATUS - RIGHT BELOW USERNAME FIELD -->
            <TextView
                android:id="@+id/usernameStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="12dp"
                android:text=""
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:alpha="0.85"
                android:gravity="center"
                android:visibility="gone"
                android:padding="6dp"
                android:background="#20000000" />

            <!-- Password Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#BBDEFB"
                app:hintTextColor="#2196F3"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="#2196F3"
                app:passwordToggleTint="#2196F3"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="#BBDEFB" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Confirm Password Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#BBDEFB"
                app:hintTextColor="#2196F3"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="#2196F3"
                app:passwordToggleTint="#2196F3"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white"
                    android:textColorHint="#BBDEFB" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gender Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="#BBDEFB"
                app:hintTextColor="#2196F3"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
                app:startIconTint="#2196F3">

                <AutoCompleteTextView
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Gender"
                    android:inputType="none"
                    android:textColor="@android:color/white"
                    android:textColorHint="#BBDEFB"
                    android:dropDownSelector="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Add these new views -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Login"
                android:visibility="gone"
                style="@style/Widget.Material3.Button" />

            <TextView
                android:id="@+id/tvGoToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="Already have account? Login"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Account"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="#2196F3"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button"
                app:elevation="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
